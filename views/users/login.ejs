<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h3 class="col-6 offset-3"> Login on Wanderlust</h3>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" nonvalidate>
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable>
                <input name="username" 
                placeholder="Enter your username"
                type="text"
                class="form-control"
                required
                />
            </div>
            <div class="mb-3">
                <lable for="password" class="form-lable">password</lable>
                <input name="password" 
                placeholder="Enter your username"
                type="password"
                class="form-control"
                required
                />
                <div class="invalid-feedback">Please enter password</div>
            </div>
            <button class="btn btn-success">login</button>
        </form>
    </div>
</div>