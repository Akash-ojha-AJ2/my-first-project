<% layout('/layouts/boilerplate') %>
  <body>
    <br><br>
    <div class="row">
      <div class="col-8 offset-2">
    <h3>Edit your Liasting</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
       <input name="listing[title]"
        placeholder="enter title" 
        type="text" 
        class="form-control" 
        required
        value="<%= listing.title%>"/>
        <div class="valid-feedback">Title looks good!</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-lable">Description</label>
      <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"
        required
      ><%= listing.description %></textarea>
      <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <P>Original Image Preview</P>
        <img src="<%= originalImageUrl %>"/> 
      </div>

      <div class="mb-3">
        <label for="image" class="form-lable">Upload New Image</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="file"
        class="form-control"
        required
      />
      </div>

      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-lable">Price</label>
      <input name="listing[price]" 
      placeholder="1200 " 
      class="form-control" 
      required
      value="<%= listing.price%>"/>
      <div class="invalid-feedback">price should be valid</div>
      </div>

      <div class="mb-3 col-md-8">
        <label for="country" class="form-lable">Country</label>
       <input name="listing[country]"
       placeholder="India" 
       type="text" class="form-control" 
       required
       value="<%= listing.country%>"/>
       <div class="invalid-feedback">Country should be valid</div>
      </div>
    </div>

      <div class="mb-3 ">
        <label for="Loaction" class="form-lable">Loaction</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
        required
        value="<%= listing.location%>"/>
        <div class="invalid-feedback">Location should be valid</div>
      </div>
      <button class="btn btn-success add-btn2 ">Edit</button>
      <br><br>
    </form>
  </div>
  </div>
  </body>
</html>